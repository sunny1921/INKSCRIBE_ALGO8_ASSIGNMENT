<!DOCTYPE html>

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script
      src="https://cdn.tiny.cloud/1/8hcu7qv70zqqjjkeslo9nqphltez2zp2m6xain8ea0zperqp/tinymce/5/tinymce.min.js"
      referrerpolicy="origin"
    ></script>
    <script
      src="https://kit.fontawesome.com/357dd17236.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <nav>
      <div class="navbar container">
            <a href="/posts/{{user.id}}" class="logo">
              <h2>InkScribe</h2>
            </a>
        <ul class="nav-links">
          <li><a href="/auth/logout"><i
                class="fa fa-sign-out"
                aria-hidden="true"
              ></i></a></li>
        </ul>
      </div>
    </nav>
    <main>
      <div class="container">
        <h2>Edit post:</h2>
      </div>
      <div class="container">
          <form action="/posts/{{user.id}}/{{post.id}}?_method=PUT" method="POST">
            <input
              required
              type="text"
              name="title"
              value={{{post.title}}}
              class="form-control"
            />
            <input
              required
              type="text"
              name="desc"
              value={{{post.desc}}}
              class="form-control"
            />
            <textarea
              required
              name="body"
              id="mytextarea"
              cols="30"
              rows="25"
              class="form-control"
              value={{{post.body}}}
            ></textarea>
            <input type="submit" class="btn btn-submit" value="Post" />
          </form>
      </div>
    </main>
    <script src="/js/script.js"></script>
    <script>
      tinymce.init({ selector: "#mytextarea" });
    </script>
  </body>

</html>